---
import Logo from '@/components/Logo.astro';
import contactInfo from '@/data/contact-info';
import { Icon } from 'astro-icon/components';

const links = [
  { href: '#', text: 'Home', icon: 'heroicons:home-solid' },
  { href: '#menu', text: 'Menu', icon: 'heroicons:cake-solid' },
  { href: '#about', text: 'About', icon: 'heroicons:building-storefront-solid' },
  { href: '#contact', text: 'Contact', icon: 'heroicons:information-circle-solid' },
];

const socialLinks = [
  { href: 'https://instagram.com/cocobakes.np', text: 'Instagram', icon: 'fe:instagram' },
  { href: 'https://facebook.com/cocobakes.np', text: 'Facebook', icon: 'fe:facebook' },
  { href: 'https://wa.me/9779849805290', text: 'WhatsApp', icon: 'mdi:whatsapp' },
];
---

<div
  id="menu"
  role="menu"
  aria-hidden="true"
  class="fixed bottom-0 right-0 top-0 flex w-72 translate-x-0 flex-col justify-between bg-fill-brand-hover aria-hidden:translate-x-72"
>
  <header class="flex justify-center px-6 py-8">
    <Logo class="text-on-bg-fill-brand" />
  </header>
  <nav aria-label="main">
    {
      links.map(({ href, text, icon }) => (
        <a
          {href}
          class="flex gap-6 border-b border-brand p-6 font-primary text-heading-xl font-regular text-on-bg-fill-brand first:border-y first:bg-fill-brand"
        >
          <Icon name={icon} class="text-on-bg-fill-brand-secondary h-6 w-6" />
          {text}
        </a>
      ))
    }
  </nav>
  <footer class="flex flex-col items-center gap-4 px-6 py-8">
    <div class="flex gap-4">
      {
        socialLinks.map(({ href, text, icon }) => (
          <a
            {href}
            target="_blank"
            rel="noopener noreferrer"
            class="flex h-10 w-10 items-center justify-center rounded-full bg-fill-brand text-on-bg-fill-brand hover:bg-fill transition-colors"
            aria-label={text}
          >
            <Icon name={icon} class="h-5 w-5" />
          </a>
        ))
      }
    </div>
    <a
      href={contactInfo.phone.href}
      class="font-secondary font-regular text-on-bg-fill-brand underline"
    >
      {contactInfo.phone.text}
    </a>
  </footer>
</div>
